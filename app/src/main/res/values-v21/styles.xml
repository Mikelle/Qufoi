<resources>
    <style name="Qufoi" parent="Qufoi.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:actionOverflowButtonStyle">@style/Qufoi.ActionButton</item>
    </style>

    <style name="Qufoi.CategorySelectionActivity">
        <item name="android:windowSharedElementEnterTransition">
            @transition/category_shared_enter
        </item>
        <item name="android:windowEnterTransition">@transition/category_enter</item>
        <item name="android:windowExitTransition">@transition/category_exit</item>
        <item name="android:windowBackground">@color/qufoi_blank</item>
    </style>

    <style name="Qufoi.QuizActivity">
        <item name="android:windowSharedElementEnterTransition">@transition/quiz_shared_enter</item>
    </style>

    <style name="Qufoi.SignInActivity">
        <item name="android:windowEnterTransition">@transition/signin_enter</item>
        <item name="android:windowExitTransition">@transition/signin_exit</item>
    </style>


    <style name="Qufoi.ActionButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/light_grey</item>
    </style>

</resources>